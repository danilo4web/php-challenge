{
    "name": "danilo4web/slim-challenge",
    "description": "PHP Challenge",
    "type": "project",
    "require": {
        "php": "^8.0",
        "slim/slim": "^4.7",
        "slim/psr7": "^1.3",
        "swiftmailer/swiftmailer": "^6.0",
        "php-di/php-di": "^6.3",
        "symfony/dotenv": "^5.2",
        "ext-json": "*",
        "doctrine/orm": "^2.13",
        "symfony/cache": "^5.4",
        "doctrine/annotations": "^1.13",
        "tuupola/slim-jwt-auth": "^3.6",
        "squizlabs/php_codesniffer": "3.*",
        "php-amqplib/php-amqplib": "^3.4"
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit",
        "check-psr12": "phpcs --standard=PSR12 src"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
